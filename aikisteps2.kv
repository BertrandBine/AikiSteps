#: kivy 1.9.1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        size_hint: (1, .15)
        LeftButton:
            size_hint: (.2,1)
            on_release: car00.load_previous()
        Label:
            text: 'Aïki Steps'
            font_size: '18sp'
            bold: True
            size_hint: (.6, 1)
            color: (0, 1, 1, 1)
        RightButton:
            size_hint: (.2, 1)
            on_release: car00.load_next()
            
        
    Carousel:
        id: car00
        orientation:'horizonal'
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                cols: 2
                size_hint: (1, .6)
                Label:
                    text: 'Thématique'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                LFontInput:
                    write_tab: 0
                Label:
                    text: 'Date'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                LFontInput:
                    write_tab: 0
                Label:
                    text: 'Objectif Général'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                LFontInput:
                    write_tab: 0
                Label:
                    text: 'Durée'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                Label:
                    id: dur_tot
                    color: (1, 1 , 1, 1)
                    font_color: (0, 1, 1, 1)
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                Label:
                    text: 'Lieu'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                LFontInput:
                    text: 'Kunheim'
                    write_tab: 0
            GridLayout:
                cols: 2
                size_hint: (1, .4)
                BoxLayout:
                    orientation: 'vertical'
                    ToggleButton:
                        height: 40
                        id: enfant
                        text: 'Enfants'
                        group: 'age'
                    ToggleButton:
                        id: ado
                        text: 'Adolescents.'
                        group: 'age'
                    ToggleButton:
                        id: adulte
                        text: 'Adultes'
                        goup: 'age'
                    ToggleButton:
                        id: mixage
                        text: 'Mixte'
                        group: 'age'
                BoxLayout:
                    orientation: 'vertical'
                    ToggleButton:
                        id: debutant
                        text: 'Débutants'
                        group: 'niv'
                    ToggleButton:
                        id: avance
                        text: 'Avancés'
                        group: 'niv'
                    ToggleButton:
                        id: yudansha
                        text: 'Yudansha'
                        goup: 'niv'
                    ToggleButton:
                        id: mixniv
                        text: 'Mixte'
                        group: 'niv'
                
                
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint:(1, .15)
                orientation: 'horizontal'
                LeftButton:
                    size_hint: (.2, 1)
                    on_release: car01.load_previous()
                Label: 
                    text: 'Description'
                    size_hint:(.4, 1)
                Label:
                    size_hint:(.2, 1)
                    text: 'P '+str(car01.index+1) + '/' + str(len(car01.slides))
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                RightButton:
                    size_hint: (.2, 1)
                    on_release: car01.load_next()
            Carousel:
                id: car01
                orientation: 'horizontal'
                CarouselSlide:
                    allow_stretch: 1

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, .15)
                AddButton:
                    id: add_button
                    text: 'Ajouter une page'
                    on_release: self.add_page(car01)
                DelButton:
                    id: del_button
                    text: 'Supprimer la page'
                    on_release: car01.remove_widget(car01.current_slide)    

<LFontInput@TextInput>:
    font_size: '16sp'
    write_tab: False

<TpsInput@LFontInput>:
    input_filter: 'float'
    font_size: '22sp'
    background_color: (0, 1, 1, 1)

<RightButton@Button>:
    size: (50, 50)
    background_color: (1, 1, 1, 1)
    text: '->'

<LeftButton@Button>:
    size: (50, 50)
    background_color: (1, 1, 1, 1)
    text: '<-'

<DelButton@Button>:


    
